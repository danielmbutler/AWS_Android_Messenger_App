<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sendimage_dialog_iv"
        android:layout_width="192dp"
        android:layout_height="186dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/sendImage_SendBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="@+id/sendimage_dialog_iv"
        app:layout_constraintTop_toBottomOf="@+id/sendimage_dialog_iv" />

    <Button
        android:id="@+id/sendimage_CancelBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Cancel"
        app:layout_constraintEnd_toStartOf="@+id/sendImage_SendBTN"
        app:layout_constraintStart_toStartOf="@+id/sendimage_dialog_iv"
        app:layout_constraintTop_toBottomOf="@+id/sendimage_dialog_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>